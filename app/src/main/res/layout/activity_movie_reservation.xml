<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:movie="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="presenter"
            type="woowacourse.movie.ui.reservation.MovieReservationPresenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/movie_reservation_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.reservation.MovieReservationActivity">

        <ScrollView
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/reservation_layout"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/poster_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:imgRes="@{presenter.movieContent.imageId}"
                    app:layout_constraintBottom_toTopOf="@+id/text_layout"
                    app:layout_constraintDimensionRatio="360:340"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/poster_image">

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27dp"
                        android:text="@{presenter.movieContent.title}"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/screening_date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        movie:openingDate="@{presenter.movieContent.openingMovieDate}"
                        movie:endingDate="@{presenter.movieContent.endingMoviesDate}"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/running_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="19dp"
                        android:text="@{@string/home_running_time(presenter.movieContent.runningTime)}"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/synopsis_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:text="@{presenter.movieContent.synopsis}"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/reservation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="9dp"
                android:layout_marginBottom="21dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/screeningDate_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:onItemSelected="@{(parent, view, position, id) -> presenter.selectDate(java.time.LocalDate.parse(String.valueOf(parent.getItemAtPosition(position))))}"
                    android:entries="@{presenter.movieContent.datesInRange}"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/screeningTime_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onItemSelected="@{(parent, view, position, id) -> presenter.selectTime(java.time.LocalTime.parse(String.valueOf(parent.getItemAtPosition(position))))}"
                    android:spinnerMode="dropdown"
                    android:entries="@{presenter.theater.screeningTimes}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_button"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:onClick="@{() -> presenter.decreaseCount()}"
                    android:text="@string/reservation_btn_minus" />

                <TextView
                    android:id="@+id/reservation_count_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_button"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:onClick="@{() -> presenter.increaseCount()}"
                    android:text="@string/reservation_btn_plus" />

            </LinearLayout>

            <Button
                android:id="@+id/reservation_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="@string/reservation_btn_select_seat"
                android:textSize="20sp"
                android:textStyle="bold"
                android:onClick="@{() -> presenter.reserveSeat()}"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
